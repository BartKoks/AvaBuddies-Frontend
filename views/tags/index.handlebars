<div class="row">
    <div class="col-sm-12">
        <h4 class="pull-left page-title">Dashboard</h4>
        <ol class="breadcrumb pull-right">
            <li><a href="/">Dashboard</a></li>
            <li class="active">Tags</li>
        </ol>
    </div>
</div>


<div class="card">
  <div class="card-body">
    <table class="table table-striped add-edit-table dt-responsive nowrap" id="datatable-editable" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
      <thead>
        <tr>
          <th>Name</th>
          <th>Is Private</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each tags.tags}}
        <tr class="gradeX">
          <td>{{name}}</td>
          <td><input type="checkbox" id="admin" name="isAdmin" data-plugin="switchery" data-color="#FF5815" value="{{isPrivate}}" {{#if isPrivate}} checked {{/if}} disabled/></td>

          <td class="actions">
            <a href="/tags/{{_id}}"><i class="md md-remove-red-eye"></i> Show</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div> <!-- end card-body -->
</div>
