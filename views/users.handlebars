<div class="col-12">
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Naam</th>
                <th scope="col">Email</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{email}}</td>
                    <td>
                        <a href="/users/edit/{{email}}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                        <button data-id="{{email}}" type="button" class="btn btn-danger delete"><i
                                class="fas fa-trash-alt"></i></button>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>
